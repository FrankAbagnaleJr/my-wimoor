<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wimoor.admin.mapper.SysMenuMapper">
    <resultMap id="BaseResultMap" type="com.wimoor.admin.pojo.entity.SysMenu">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id" jdbcType="BIGINT"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="component" column="component" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="INTEGER"/>
        <result property="visible" column="visible" jdbcType="BOOLEAN"/>
        <result property="redirect" column="redirect" jdbcType="VARCHAR"/>
        <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
        <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
 		<result property="oldid" column="oldid" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,name,parent_id,
        path,component,redirect,
        icon,sort,visible,
        gmt_create,gmt_modified,oldid
    </sql>

    <select id="listRouteAll" resultMap="BaseResultMap">
        select distinct t1.id,
               t1.name,
               t1.parent_id,
               t1.path,
               t1.component,
               t1.icon,
               t1.sort,
               t1.visible,
               t1.redirect,
               t1.gmt_create,
               t1.gmt_modified,
               t1.oldid
        from t_sys_menu t1
        where t1.visible =1  
    </select>
    <select id="listRoute" resultMap="BaseResultMap">
        select distinct t1.id,
               t1.name,
               t1.parent_id,
               t1.path,
               t1.component,
               t1.icon,
               t1.sort,
               t1.visible,
               t1.redirect,
               t1.gmt_create,
               t1.gmt_modified,
               t1.oldid
        from t_sys_menu t1
        left join t_sys_role_menu t2 on t2.menu_id=t1.id 
        left join t_user_role t4 on t4.role_id = t2.role_id
        where t1.visible =1 and (t4.user_id=#{userid,jdbcType=CHAR})
    </select>

   
</mapper>
